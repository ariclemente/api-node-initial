{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": [
        "standard",
        "prettier",
        "prettier/standard"
    ],
    "plugins": [
        "import",
        "prettier",
        "standard"
    ],
    "rules": {
        "space-before-function-paren": 0,
        "new-cap": 0,
        "prettier/prettier": 2
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "globals": {
        "describe": true,
        "it": true,
        "expect": true,
        "app": true,
        "td": true,
        "beforeEach": true,
        "request": true,
        "Joi": true,
        "joiAssert": true
    }
}